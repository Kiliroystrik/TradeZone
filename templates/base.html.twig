<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="{{ asset('css/style.css')}}">
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a href="{{ path('home') }}" class="nav-link">Accueil</a>
				</li>
				<li
					class="nav-item">{# <a href="{{ path('about') }}">À propos</a> #}
				</li>
				{% if app.user %}
					{% if is_granted('ROLE_USER') %}
						<li class="nav-item">
							<a href="{{ path('back_office_dashboard') }}" class="nav-link">Tableau de bord</a>
						</li>
					{% endif %}
					<li class="nav-item">
						<a href="{{ path('logout') }}" class="nav-link">Se déconnecter</a>
					</li>
				{% else %}
					<li class="nav-item">
						<a href="{{ path('login') }}" class="nav-link">Se connecter</a>
					</li>
					<li class="nav-item">
						<a href="{{ path('register') }}" class="nav-link">S'inscrire</a>
					</li>
				{% endif %}
			</ul>
		</nav>
		{% block body %}{% endblock %}
	</body>
</html>
